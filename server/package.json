    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "node-windows": "^1.0.0-beta.8",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
